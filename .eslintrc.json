{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-debugger": "off"
  },
  "overrides": [
    {
      "files": ["*.js*"],
      "rules": {
        "react/react-in-jsx-scope": "off"
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": ["/src/tests/**/*.js*", "src/setupTests.js"],
  "parser": "@babel/eslint-parser"
}
